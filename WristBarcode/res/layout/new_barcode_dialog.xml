<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText 
    	android:id="@+id/new_barcode_name"
    	android:contentDescription="new_barcode_name" 
    	android:layout_width="match_parent" 
    	android:text="" 
    	android:layout_height="wrap_content">
    </EditText>
    <LinearLayout
  		android:id="@+id/new_barcode_name_dialog_button_container"
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:padding="10dp">
	    <Button
	        android:id="@+id/complete_barcode_name_button"
	        android:text="OK"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp">
	    </Button>
	    <Button
	        android:id="@+id/cancel_barcode_name_button"
	        android:text="Cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp">
	    </Button>
	</LinearLayout>
  
</LinearLayout>
